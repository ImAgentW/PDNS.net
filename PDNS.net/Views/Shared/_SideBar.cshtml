@model PDNS.net.Models.User
<!-- Sidebar -->
<div class="sidebar sidebar-style-2" data-background-color="dark2">
    <div class="sidebar-wrapper scrollbar scrollbar-inner">
        <div class="sidebar-content">
            <div class="user">
                <div class="avatar-sm float-left mr-2">
                    <img src="@Model.Profile" alt="@Model.Name" class="avatar-img rounded-circle">
                </div>
                <div class="info">
                    <a data-toggle="collapse" href="#sb-dashboard" aria-expanded="true">
                        <span>
                            @Model.Name
                            <span class="user-level">@Model.UserName</span>
                            <span class="caret"></span>
                        </span>
                    </a>
                    <div class="clearfix"></div>

                    <div class="collapse in" id="sb-dashboard">
                        <ul class="nav">
                            <li>
                                <a asp-action="Profile" asp-controller="Users">
                                    <span class="link-collapse">Profile</span>
                                </a>
                            </li>
                            <li>
                                <a asp-action="Settings" asp-controller="Home">
                                    <span class="link-collapse">Settings</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <ul class="nav nav-primary">
                <li class="nav-item active">
                    <a asp-action="Index" asp-controller="Home">
                        <i class="fas fa-home"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li class="nav-section">
                    <span class="sidebar-mini-icon">
                        <i class="fa fa-ellipsis-h"></i>
                    </span>
                    <h4 class="text-section">Management</h4>
                </li>
                <li class="nav-item">
                    <a data-toggle="collapse" href="#sb-domains">
                        <i class="fas fa-server"></i>
                        <p>Domains</p>
                        <span class="caret"></span>
                    </a>
                    <div class="collapse" id="sb-domains">
                        <ul class="nav nav-collapse">
                            <li>
                                <a asp-action="New" asp-controller="Domains">
                                    <span class="sub-item">New</span>
                                </a>
                            </li>
                            <li>
                                <a asp-action="Index" asp-controller="Domains">
                                    <span class="sub-item">Domains</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <a data-toggle="collapse" href="#sb-users">
                        <i class="fas fa-users"></i>
                        <p>Users</p>
                        <span class="caret"></span>
                    </a>
                    <div class="collapse" id="sb-users">
                        <ul class="nav nav-collapse">
                            <li>
                                <a asp-action="New" asp-controller="Users">
                                    <span class="sub-item">New</span>
                                </a>
                            </li>
                            <li>
                                <a asp-action="Index" asp-controller="Users">
                                    <span class="sub-item">Users</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <a asp-action="Reports" asp-controller="Home">
                        <i class="fas fa-chart-line"></i>
                        <p>Statistics</p>
                        <span class="badge badge-success">4</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- End Sidebar -->
